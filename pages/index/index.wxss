/**index.wxss**/
.container {
  padding-bottom: 40rpx;
}
.header-image {
  width: 100%;
  height: 400rpx;
}
.common-border {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px dashed #797979;
}
.background-btns, .textstyle-btns, .time-switch, .color-btns, .background-color-btns {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}
.background-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 140rpx;
  color: #797979;
  background-color: white;
  border: 1px solid #363636;
}
.background-color-btn {
  width: 100rpx;
  height: 140rpx;
  color: #797979;
  background-color: white;
  border: 2px solid transparent;
}
.container .btn-chosen {
  color: white;
  background-color: #363636;
}
.background-btns .background-local {
  color: white;
  background-color: #c9c9c9;
}
.textstyle-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 160rpx;
  color: #797979;
  background-color: white;
  border: 1px solid #797979;
}
.item-title {
  padding: 20rpx 0 5rpx 20rpx;
  line-height: 1;
}
.container .color-chosen {
  border-color: black;
}
.color-btn {
  width: 96rpx;
  height: 54rpx;
  padding: 2px;
  margin-bottom: 6rpx;
  border: 2px dashed transparent;
  box-sizing: border-box;
}
.textarea-box {
  width: 100%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.textarea-wrapper {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.word-textarea, .name-textarea {
  width: 100%;
  height: 100%;
  background-color: white;
  padding: 16rpx 10rpx 50rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}
.textarea-counter {
  position: absolute;
  right: 20rpx;
  bottom: 16rpx;
}
.create-btn {
  width: 60%;
  height: 40px;
  font-size: 32rpx;
  line-height: 40px;
  color: white;
  background-color: #00ccff;
}